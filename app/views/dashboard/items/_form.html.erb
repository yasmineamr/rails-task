<%= form_with(model: [:dashboard, item], local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, required: true, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, cols: 60, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, step: :any, required: true, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.select :item_type, options_for_select(Item.item_types.keys.map { |type| [type.titleize, type] }, @item.item_type || params[:category] || Item.item_types.keys.first), { prompt: 'Select type' }, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :is_featured %>
    <%= form.check_box :is_featured, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-default' %>
  </div>
<% end %>
<br>
