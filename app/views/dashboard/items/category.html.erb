<p id="notice"><%= notice %></p>
<% if @error %>
  <p id="notice"><%= @error %></p>
<% else %>
  <h1>Items</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Is Featured</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
          <!-- <td><%= item.item_type.try(:titleize) %></td> -->
          <% if item.is_featured %>
            <td> Yes </td>
          <% else %>
            <td> No </td>
          <% end %>
          <td><%= link_to 'Show', dashboard_item_path(item) %></td>
            <td><%= link_to 'Edit', edit_dashboard_item_path(item) %></td>
            <td><%= link_to 'Destroy', [:dashboard, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>


        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Item', new_dashboard_item_path %>

<% end %>
