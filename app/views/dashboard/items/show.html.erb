
<div class="form-group">
  <strong>Title:</strong>
  <%= @item.title %>
</div>

<div class="form-group">
  <strong>Description:</strong>
  <%= @item.description %>
</div>

<div class="form-group">
  <strong>Price:</strong>
  <%= @item.price %>
</div>

<div class="form-group">
  <strong>Type:</strong>
  <%= @item.item_type %>
</div>

<div class="form-group">
  <strong>Is featured:</strong>
  <%= @item.is_featured %>
</div>

<%= link_to 'Edit', edit_dashboard_item_path(@item), class: 'btn btn-default'  %>

<%= link_to 'Photo Gallery', dashboard_item_photos_path(item_id: @item.id), class: 'btn btn-default' %>
<%= link_to 'Trailers & Videos', dashboard_item_videos_path(@item), class: 'btn btn-default' %>

<div class="form-group">
  <h3>Reviews: </h3><br>
    <% if @reviews.count != 0 %>
      <% @reviews.each do |review| %>
        <strong> <%= User.find(review.user_id).name %></strong> : Rated <strong> <%= review.rate %> </strong> |
        <%= review.text %>
          <td><%= link_to 'Delete', dashboard_item_review_path(id:review,item_id: @item.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
        <hr>
      <% end %>
    <% else %>
      <p>No Reviews.</p>
    <% end %>
</div>
