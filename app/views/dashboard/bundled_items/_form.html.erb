<%= form_with(model: [:dashboard, bundled_item], local: true) do |form| %>
  <%= error_messages_for(bundled_item) %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, required: true, class: 'form-control' %>
  </div>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Item Type</th>
        <th colspan="1"></th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total Price</th>
        <% if bundled_item.id %>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= form.fields_for :set_items do |ff| %>
        <% item = ff.object.item %>
        <tr>
         <td> <%= ff.label :title, item.title %> </td>
          <td> <%= ff.label :item_type, item.item_type.try(:titleize) %> </td>
          <td> <%= ff.hidden_field :item_id, :value => item.id %> </td>
          <td> <%= ff.number_field :quantity, class: 'qtn_field form-control', min: 1 %> </td>
          <td class="price"> <%= number_to_currency(item.price) %></td>
          <td class="item_total"> <%= number_to_currency((ff.object.quantity || 0) * item.price) %> </td>
          <% if bundled_item.id %>
            <td> <%= ff.check_box :_destroy, class: 'form-control' %> </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="form-group">
    <%= form.label :discounted_price %>
    <%= form.number_field :discounted_price, step: :any, required: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-default' %>
  </div>
<% end %>
