<p id="notice"><%= notice %></p>


<p>
  <strong>Title:</strong>
  <%= @bundled_item.title %>
</p>

<p>
  <strong>Discounted price:</strong>
  <%= number_to_currency(@bundled_item.discounted_price) %>
</p>

<table>
  <% @items.each do |set_item| %> 
    <tr>
	    <td><%= set_item.quantity %>&times;</td>
	    <td><%= link_to set_item.item.title, item_path(set_item.item.id) %></td>
	  </tr>
  <% end %>
</table>

<% if current_user %>
  <%= button_to 'Add To Cart', line_items_path(bundled_item_id: @bundled_item.id), remote: true %>
<% end %>
<%= link_to 'Back', landing_index_path %>
