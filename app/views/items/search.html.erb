<p id="notice"><%= notice %></p>
<% if @error %>
  <p id="notice"><%= @error %></p>
<% else %>
  <h1>Search Items</h1>

  <% if @items.count == 0 %>
    <h4> Your search did not match any item </h4>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Is Featured</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.description %></td>
            <td><%= item.price %></td>
            <td><%= item.item_type.try(:titleize) %></td>
            <td><%= link_to 'Show', item_path(item.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
